@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model CLED.Pages.ProblemeInputModel

@{
    Layout = "_Layout";
}




        <form class="form" method="post">
            <fieldset>
                <legend class="text-center">Problem Input</legend>
                <div class="form-group">
                    <div class="flex-xl-row">
                        <div class="col-md-10">
                            <select asp-for="Input.Language" class="custom-select">
                                <option disabled selected value="">Open this select menu</option>
                                <option value="en">English</option>
                                <option value="fr">French</option>
                                <option value="ar">Arabe</option>
                            </select>
                            <span asp-validation-for="Input.Language"  class="alert-danger" ></span>
                        </div>
                    </div>
                </div>
                <!-- Message body -->
                <div class="form-group">
                    <div class="flex-xl-row">
                        <div class="col-md-10">
                            <textarea asp-for="Input.Message" class="form-control" style="resize:none;" placeholder="Please enter your Problem here..." rows="15"></textarea>
                            <span asp-validation-for="Input.Message" class="alert-danger" ></span>
                        </div>
                        
                    </div>
                </div>
                <!-- Form actions -->

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </fieldset>
        </form>




<div class="col-md">

    <label>
        @{

            string @urlpath = "";

            if (Model.list3 != null)
            {
                foreach (var @a in Model.list3)
                {
                    string[] ad = a.ToArray();



                    foreach (var item in a)
                    {

                        if (((item.Contains("http://")) || item.Contains("https://")))
                        {
                            int i = Int32.Parse(ad[3]);
                            urlpath = @item.ToString();
                            if ((ad[1] != "PROPN"))
                            {

                                <span>  <img src="@urlpath.ToString()" class="img-responsive" style="height: 100px; width: 100px;" /></span>
                                <span> @i</span>

                            }

                        }
                    }
                    if ((ad[1] == "PROPN"))
                    {
                        urlpath = ad[0].ToString();

                        <span> <img src="@urlpath.ToString()" class="img-responsive" style="height: 100px; width: 100px;" /> ==> </span>
                    }



                }


            }
        }
    </label>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

