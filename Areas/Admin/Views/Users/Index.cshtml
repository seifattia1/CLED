@model IEnumerable<UserClassView>
@{
    ViewData["Title"] = "User Manager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="row">
    <div class="col mb-5">
        <div class="container">
            <div class="container-fluid pt-5">
                <div class="container">
                    <div class="text-center pb-2">
                        <h1 class="mb-4">Management | << Users >></h1>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">User Management</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr class="bg-primary text-white">
                                <th>UserName</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Full Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@string.Join(" , ", user.Roles.ToList())</td>
                                <td>@user.FullName</td>
                                <td>
                                    <a class="btn btn-danger px-4" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.Id">
                                       <i>Manage Roles</i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}