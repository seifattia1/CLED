@using Microsoft.AspNetCore.Identity
@using CLED.Areas.Identity.Data

@inject SignInManager<CLEDUser> SignInManager

<div class="container-fluid bg-light position-relative shadow">
    <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0 px-lg-5" >
        <a href="" class="navbar-brand font-weight-bold text-secondary" style="font-size: 50px;">
            <i class="flaticon-026-paper-boat"></i>
            <span class="text-primary">CLED</span>
        </a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
            @if (SignInManager.IsSignedIn(User))
            {

            <div class="navbar-nav font-weight-bold mx-auto py-0">
                <a asp-controller="Home" asp-action="Index" class="nav-item nav-link ">Home</a>
                @if (!User.IsInRole("FreeUser"))
                {
                    <a href="/problemeinput" class="nav-item nav-link ">Illustrator</a>
                    <a href="/support" class="nav-item nav-link ">Support Client</a>
                }

            </div>
            }
            <div class="collapse navbar-collapse collapse badge-btn  flex-sm-row-reverse" id="navbarCollapse">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</div>
<!-- Navbar End -->