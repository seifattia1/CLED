@using Microsoft.AspNetCore.Identity
@using CLED.Areas.Identity.Data

@inject SignInManager<CLEDUser> SignInManager
@inject UserManager<CLEDUser> UserManager


<ul class="navbar-nav justify-content-between">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            
            <a id="manage" class="btn btn-primary px-4" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> <i class="fa-edit">Edit Profile</i> </a>

        </li>
        @if (User.IsInRole("FREEUSER"))
        {
            <li class="nav-item">
                <a id="manage" class="btn btn-app px-4" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Be Premium </a>
            </li>
        }
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-danger px-4"><i class="fa-facebook">Logout</i></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary px-4" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-success px-4" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
